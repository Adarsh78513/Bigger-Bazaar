<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <% if(result.length > 0){ %>
        <% result.forEach( result => { %>
            <h1 class = "productName" ><%= result.ProductName %></h1>
            <p>Product Type: <%= result.ProductType %></p>
            <p>Description: <%= result.Description %></p>
            <% if(result.CompanyName != null){ %>
                <p>Company: <%= result.CompanyName %></p>
            <% } %>
            <p>Cost: <%= result.Price %></p>
            <% if(result.DealID != null){ %>
                <p>Deal ID: <%= result.DealID %></p>
            <% }else{ %>
                <p>No deals on this product currently.</p>
            <% } %>
        <% }) %>
    <% }else { %>
        <p>No products</p>
    <% } %>
</body>



</html>